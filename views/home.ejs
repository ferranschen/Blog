<% include ./partials/header %>
<div class="ui piled segment">
	<div class="ui divided items">
	<% posts.forEach((post) => { %>

	  <div class="item">
			<div class="image">
		  	<img src="<%= post.image %>" alt="很抱歉，圖片連結暫時失效。">
		  	</div>
		 	<div class="content">
	     		<a class="header"><%= post.title%></a>
	      		<div class="meta">
	        		<span>Description</span>
	      		</div>
	      		<div class="description">
	      	  	<p><%= post.body %></p>
	      		</div>
	      		<div class="extra">
	      		  Additional Details
	     		 </div>
	    	</div>
	  </div>

	<% }); %>
	</div> 
<!-- end of items -->
</div>



<% include ./partials/footer %>